<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menu"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_title"
        android:layout_width="270dp"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:src="@drawable/title_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.124"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout3" />

    <ImageButton
        android:id="@+id/btn_exit"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:backgroundTint="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/btn_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:autofillHints="Masukan nama.."
        android:hint="Masukan nama..."
        android:imeOptions="actionDone"
        android:inputType="textCapWords"
        android:textColor="@color/white"
        android:textColorHint="@color/grey"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_exit"
        app:layout_constraintStart_toStartOf="@+id/btn_exit" />

    <ImageButton
        android:id="@+id/btn_menu"
        android:layout_width="65dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/transparent"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/btn_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <LinearLayout
        android:id="@+id/linear_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/btn_menu"
        app:layout_constraintEnd_toStartOf="@id/btn_menu"
        app:layout_constraintTop_toTopOf="@+id/btn_menu">

        <ImageButton
            android:id="@+id/btn_about"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn_about" />

        <ImageButton
            android:id="@+id/btn_sound"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/sound" />

        <ImageButton
            android:id="@+id/btn_instagram"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn_instagram" />

        <ImageButton
            android:id="@+id/btn_twitter"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:backgroundTint="@android:color/transparent"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/btn_twitter" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="230dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_menu_item"
            tools:layout_editor_absoluteX="349dp"
            tools:layout_editor_absoluteY="128dp">

            <Button
                android:id="@+id/btn_permainan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Permainan"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="230dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_menu_item"
            tools:layout_editor_absoluteX="349dp"
            tools:layout_editor_absoluteY="128dp">

            <Button
                android:id="@+id/btn_belajar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Pembelajaran"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="230dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_menu_item"
            tools:layout_editor_absoluteX="349dp"
            tools:layout_editor_absoluteY="128dp">

            <Button
                android:id="@+id/btn_rangking"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="Riwayat Skor"
                android:textAllCaps="false"
                android:textColor="#FFF"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>